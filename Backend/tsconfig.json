{
  "compilerOptions": {
    "baseUrl": "./src",   // Ensure baseUrl is set to your projectâ€™s root or 'src' folder
    "paths": {
      "@/*": ["src/*"] ,
      "@decorators/*": ["src/decorators/*"]   // Map '@' to the 'src' directory
    },
   "typeRoots": ["./node_modules/@types", "./src/types"],
    "outDir": "./dist",
    "rootDir": "./src",
    "module": "commonjs",
    "target": "es6",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts", "src/types/**/*.d.ts"],
  "exclude": ["node_modules"]
}

